@import 'maps/base'

$lower = #a3a3a3
$lower_middle = #d0d0c1
$middle = #ffffe0
$upper_middle = #e9c8cb
$upper = #d190b6
$no_data = #333

.item-body
	h2
		margin  0

	h3
		font-family $qz-sans
		font-size 18px
		margin 10px 0 0 0

	svg
		border 1px solid $qz-gray-3

.wrapper
	float left
	width 320px

ul#legend
	padding: 10px 0 0 0
	margin: 0
	list-style-type: none
	width 640px

	li
		display: inline-block
		margin: 0 18px 0 0
		padding: 0
		line-height: 17px

		b
			display: inline-block
			width: 17px
			height: 17px
			margin-right: 6px
			float: left
			border: 1px solid $qz-map-graticule

		div
			whitespace: nowrap
			fill: $qz-gray-2
			font-size: 14px
			font-family: $qz-sans-bold
			font-weight: bold
			float: left;

		&.quintile1 b
			 background-color: $lower

		&.quintile2 b
			 background-color: $lower_middle

		&.quintile3 b
			 background-color: $middle

		&.quintile4 b
			 background-color: $upper_middle

		&.quintile5 b
			 background-color: $upper

		&.no-data b
			 background-color: $no_data

// Paths
.paths
	.counties path
		// fill $qz-map-land-fill
		stroke $qz-map-land-stroke
		stroke-width 0.5px
		opacity: 0.25

		&.new-york
			opacity: 1.0

		&.quintile1
			fill $lower

		&.quintile2
			fill $lower_middle

		&.quintile3
			fill $middle

		&.quintile4
			fill $upper_middle

		&.quintile5
			fill $upper

		&.no-data
			fill $no_data

	.states path
		fill none
		stroke $qz-gray-3
		stroke-width 1px

		opacity 0.25

		&.new-york
			opacity 1.0

@media screen and (max-width $width-mobile)
	.item-body h5
		// font-size 14px
		font-weight bold

	.paths
		.states path
			fill none
			stroke $qz-gray-3
			stroke-width 0.75px

	.footer
		position inherit

@media screen and (max-width 959px)
	.paths
		.counties path
			stroke-width 0.5px

			&.quintile1
				stroke $lower

			&.quintile2
				stroke $lower_middle

			&.quintile3
				stroke $middle

			&.quintile4
				stroke $upper_middle

			&.quintile5
				stroke $upper

			&.no-data
				stroke $no_data
